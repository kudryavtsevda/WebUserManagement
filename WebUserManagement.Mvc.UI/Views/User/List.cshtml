@using System.Collections.Generic
@using WebUserManagement.DTO
@model IEnumerable<UserResponse>

<div>
    <a href="/User/CreateUser" >CREATE USER</a>
    <table border="1">
        <thead>
            <tr>
                <th />
                <th>Id</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td>
                    <a href="/User/EditUser/@user.Id">EDIT</a>
                </td>
                <td>@user.Id</td>
                <td>@user.LastName</td>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>
                    <form action="/User/Delete/@user.Id" method="post">
                        <button type='submit' class='btn btn-default'>
                            <span class='glyphicon glyphicon-remove' />
                        </button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>